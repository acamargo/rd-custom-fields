<p><%= link_to 'Adicionar Campo Personalizado', new_custom_field_path, class: 'btn btn-success' %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>E-mail</td>
      <td>Texto</td>
      <td></td>
      <td></td>
    </tr>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.name %></td>
        <td><%= custom_field.content_type_name %></td>
        <td><%= link_to 'Alterar', edit_custom_field_path(custom_field) %></td>
        <td><%= link_to 'Excluir', custom_field_path(custom_field), method: :delete, data: { confirm: "Excluir campo #{custom_field.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
